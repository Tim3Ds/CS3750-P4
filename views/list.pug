extends layout

block content
    link(rel='stylesheet', href='/stylesheets/list.css')
    input.register(type="hidden", id="csrf" name="_csrf", value=csrfToken)
    .container.main
        .stock-list
            h2#title Stock List
                //a(href='/stock/add')
                    input.btn.btn-success#add(type="button" value="Add Stock")
            input#portfolio(type="hidden" value= portfolio)
            table.table#mytable
                thead
                    tr
                        th Stock Name
                        th Current Price
                        th Up or Down
                        th Stock Ticker Code
                        th(style="width:40px;")
                            a(href='/stock/add')
                                input.btn.btn-success#add(type="button" value="Add Stock")
                tbody
                    

block scripts
    script(src='/scripts/_list.js')